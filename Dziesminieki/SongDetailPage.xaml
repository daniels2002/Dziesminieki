<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Dziesminieki.SongDetailPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="≡"
                     Order="Primary"
                     Priority="2"
                     Clicked="OnSettingsButtonClicked" />
        <ToolbarItem Text="♥"
              Order="Primary"
              Priority="1"
              Clicked="OnFavoriteSongsButtonClicked" />
        <ToolbarItem IconImageSource="share.png"
              Order="Primary"
              Priority="0"
              Clicked="OnShareSongButtonClicked" />
    </ContentPage.ToolbarItems>

    <Grid Padding="10">
        <ScrollView VerticalOptions="Fill">
            <Label x:Name="SongLyricsLabel" FontSize="18" HorizontalOptions="Center" VerticalOptions="Start" />
        </ScrollView>
    </Grid>
</ContentPage>