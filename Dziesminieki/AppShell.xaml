<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Dziesminieki.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Dziesminieki"
    Shell.FlyoutBehavior="Disabled"
    Title="Dziesminieki">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Song Detail"
        ContentTemplate="{DataTemplate local:SongDetailPage}"
        Route="SongDetailPage" />

    <!-- Add this route for SettingsPage -->
    <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate local:SettingsPage}"
        Route="SettingsPage" />
</Shell>